<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.clase.dogypark.Usuario">

    <TextView
        android:id="@+id/tv_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/foto"
        android:layout_alignStart="@+id/foto"
        android:layout_below="@+id/foto"
        android:layout_marginTop="22dp"
        android:text="Nombre: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textv_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_nombre"
        android:layout_alignBottom="@+id/tv_nombre"
        android:layout_toEndOf="@+id/tv_nombre"
        android:layout_toRightOf="@+id/tv_nombre"
        android:textSize="18sp" />


    <ImageView
        android:id="@+id/foto"
        android:layout_width="250px"
        android:layout_height="250px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:src="@mipmap/ic_launcher_round" />


</RelativeLayout>
