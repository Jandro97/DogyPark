<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alejandro.clase.dogypark">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-feature android:name="android.hardware.location.gps" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_icon_dogypark"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name="com.alejandro.clase.dogypark.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.alejandro.clase.dogypark.Registro" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name="com.alejandro.clase.dogypark.SecondActivity"
            android:screenOrientation="portrait" />

        <uses-library android:name="com.google.android.maps" />

        <activity
            android:name="com.alejandro.clase.dogypark.despazados"
            android:label="@string/title_activity_despazados"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name="com.alejandro.clase.dogypark.settings"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.alejandro.clase.dogypark.CrearParque"
            android:screenOrientation="portrait" />
        <activity android:name="com.alejandro.clase.dogypark.Registro2" />
        <activity android:name="com.alejandro.clase.dogypark.infomarker"></activity>
    </application>

</manifest>